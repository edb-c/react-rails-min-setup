<h1>The Tweets - Rails Side</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.id %></td>
        <td><%= tweet.text %></td>
      </tr>
    <% end %>
  </tbody>
</table>
